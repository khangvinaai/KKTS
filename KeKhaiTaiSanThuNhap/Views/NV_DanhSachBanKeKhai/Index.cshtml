
@{
    ViewBag.Title = "Danh Sách Kế Hoạch Xác Minh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh Sách Kế Hoạch Xác Minh</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card elevation-2">
                    <div class="card-tools">
                        <div class="input-group input-group-sm row">


                            <input type="text" name="table_search" class="form-control float-right mr-1" placeholder="Tìm..." id="Filter">
                            <div class="input-group-append mr-3">
                                <button type="submit" class="btn btn-default" id="search_btn">
                                    <i class="fas fa-search text-primary"></i>
                                </button>
                            </div>

                            <div class="input-group-append">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-sh" id="them">
                                    <i class="fas fa-plus pr-2"></i>Thêm Mới
                                </button>
                            </div>
                            <div class="input-group-append">

                            </div>
                        </div>
                    </div>

                    <table class="table table-hover text-nowrap table-bordered" id="dataTable">
                        <thead class="bg-primary">
                            <tr>
                                <th width="5%">STT</th>
                                <th width="25%">Tên Kế Hoạch Xác Minh</th>
                                <th width="25%">Tên Kế Hoạch Kê Khai</th>
                                <th width="5%">Kế Hoạch Năm</th>
                                <th width="5%">Căn Cứ Quyết Định</th>
                                <th width="20%">Nội Dung Xác Minh</th>
                                <th width="10%">Ngày Ra Quyết Định</th>
                                <th width="5%">Thời Hạn Xác Minh</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <div class="card-footer clearfix" style="height: 51px; width: 100%">
                        <ul class="pagination pagination-sm m-0 float-right">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="add-sh">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm Danh Mục Chức Vụ - Chức Danh</h4>
                    <button type="button" class="close closeform" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form cf">
                        <div class="wizard" style="border-bottom: 2px solid #564AF9;">
                            <div class="wizard-inner">
                                <div class="connecting-line" style="width:62% !important;top: 40% !important;margin-left: 16%;"></div>
                                <ul class="nav nav-tabs step_new" style="left:10%;right:10%;border-bottom:none" role="tablist">
                                    <li  class="text-center" role="presentation" data-tag="TD1" data-index="0">
                                        <p>&nbsp;</p>
                                        <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" class="nav-link active">
                                            <span class="round-tab" title="Tiến độ 1">1</span>
                                        </a>
                                        <p>Ra quyết định <br /> xác minh tài sản,<br /> thu nhập</p>
                                    </li>
                                    <li  class="text-center" role="presentation" data-tag="TD2" data-index="1">
                                        <p id="idTD1" class="Edit-TienDo">&nbsp;</p>
                                        <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" class="nav-link disabled">
                                            <span class="round-tab" title="Tiến độ 2">2</span>
                                        </a>
                                        <p>
                                            Giải trình tài sản <br /> thu nhập
                                        </p>
                                    </li>

                                    <li  class="text-center" role="presentation" data-tag="TD3" data-index="2">
                                        <p id="idTD2" class="Edit-TienDo">&nbsp;</p>
                                        <a href="#step4" data-toggle="tab" aria-controls="step3" role="tab" class="nav-link disabled">
                                            <span class="round-tab" title="Tiến độ 3">3</span>
                                        </a>
                                        <p>
                                            Tiến hành xác minh tài sản, thu nhập
                                        </p>
                                    </li>

                                    <li  class="text-center" role="presentation" data-tag="TD4" data-index="3">
                                        <p id="idTD3" class="Edit-TienDo">&nbsp;</p>
                                        <a href="#step6" data-toggle="tab" aria-controls="step4" role="tab" class="nav-link disabled">
                                            <span class="round-tab" title="Tiến độ 4">4</span>
                                        </a>
                                        <p>Báo cáo kết quả<br /> thanh tra</p>
                                    </li>

                                    <li class="text-center" role="presentation" data-tag="TD5" data-index="4">
                                        <p id="idTD4" class="Edit-TienDo">&nbsp;</p>
                                        <a href="#step8" data-toggle="tab" aria-controls="step5" role="tab" class="nav-link disabled">
                                            <span class="round-tab" title="Tiến độ 5">5</span>
                                        </a>
                                        <p>Kết luận<br />thanh tra</p>
                                    </li>
                                    <li class="text-center" role="presentation" data-tag="TD6" data-index="5">
                                        <p id="idTD5" class="Edit-TienDo">&nbsp;</p>
                                        <a href="#step9" data-toggle="tab" aria-controls="step6" role="tab" class="nav-link disabled">
                                            <span class="round-tab" title="Tiến độ 6">6</span>
                                        </a>
                                        <p>Công khai kết luận<br /> thanh tra</p>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </form>
                    <div class="row" style="padding: 0 0 20px 0">
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>

    var dt;

    function loadDataTable() {
        dt = $("#dataTable").DataTable({
            "lengthChange": false,
            "info": false,
            "searching": true,
            "language": {
                "search": "",
                "info": "Tổng số _TOTAL_ hàng",
                "infoEmpty": "",
                "infoFiltered": "",
                "paginate": {
                    "next": "»",
                    "previous": "«"
                },
                "processing": `Đang tải dữ liệu`,
                searchPlaceholder: "Tìm...",
                zeroRecords: "Không tìm thấy kết quả",

            },
            dom: 'Bfrtip',
            buttons: [
                {
                    text: '<i class="fa fa-file-excel"></i>',
                    extend: 'excel',
                    className: 'btn btn-outline-primary btn-sm mt-2 ml-3'
                },
                {
                    text: '<i class="fa fa-file-pdf"></i>',
                    extend: 'pdf',
                    className: 'btn btn-outline-primary btn-sm mt-2'
                },
                {
                    text: '<i class="fa fa-print"></i>',
                    extend: 'print',
                    className: 'btn btn-outline-primary btn-sm mt-2'
                }
            ],

            //Hoàng chỉnh sửa option tỉnh, huyện 23-2-2022
            "serverSide": true,
            "processing": true,
            "ajax": {
                "url": "/NV_LapKeHoachXacMinh/LoadDataKeHoachXacMinh",
                "type": "POST",
                "datatype": "json"
            },
           
            "columns": [
                { "data": "ID" },
                {
                    "data": { "TenKeHoachXacMinh": "TenKeHoachXacMinh", "ID": "ID" }, "render": function (data, type, row, meta) {
                        return `<a href="/ke-hoach-xac-minh/co-quan-duoc-xac-minh/${data.ID}"><b>${data.TenKeHoachXacMinh}</b></a>`
                    }
                },
                { "data": "TenKeHoachKeKhai" },
                { "data": "KeHoachNam" },
                { "data": "CanCuQuyetDinh" },
                { "data": "NoiDungXacMinh" },
                {
                    "data": "NgayRaQuyetDinh", "render": function (data, type, row, meta) {
                        return moment(data).format('DD/MM/YYYY');
                    }
                },
                {
                    "data": "ThoiHanXacMinh", "render": function (data, type, row, meta) {
                        return data + " Ngày";
                    }
                },
               
            ]
        });
        dt.on('draw.dt', function () {
            var info = dt.page.info();
            dt.column(0, { search: 'applied', order: 'applied', page: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1 + info.start;
            });
        });
    }

    $(document).ready(function () {
        loadDataTable();

    })



</script>

