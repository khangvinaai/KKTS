
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh Sách công khai kết luận</li>
                </ol>
            </div>
        </div>
    </div>
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card elevation-2" style="overflow-x: scroll; overflow-y: hidden; ">
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 300px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Tìm ..." id="Filter_QLTenTaiKhoan">

                            <div class="input-group-append mr-3">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search text-primary"></i>
                                </button>
                            </div>
                            <div class="input-group-append">
                                <a style="cursor:pointer" class="btn-add" pattern="create" href="@Url.Action("CongKhaiKetLuan","NV_CongKhaiKetLuan")"><span class="fa fa-plus"></span> Thêm mới</a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-hover text-nowrap table-bordered" id="dataTable">
                        <thead class="bg-primary">
                            <tr>
                                <th>STT</th>
                                <th>Tên Kế Hoạch</th>
                                <th>Kế Hoạch Năm</th>
                                <th>Căn Cứ QĐ</th>
                                <th>Nội Dung Kế Hoạch</th>
                                <th>Tiến Độ</th>
                                <th>Trạng Thái</th>
                                <th>Chức Năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Kế hoạch A</td>
                                <td>2022</td>
                                <td>QĐ-0125415</td>
                                <td>Nội dung kế hoạch</td>
                                <td>Công khai kết luận</td>
                                <td>Đang công khai kết luận</td>
                                <td>
                                    <a style="cursor:pointer" class="btn-edit" pattern="edit" href="@Url.Action("CongKhaiKetLuan","NV_CongKhaiKetLuan")"><span class="fa fa-pager"></span> Xem chi tiết</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="card-footer clearfix" style="height: 51px; width: 100%">
                        <ul class="pagination pagination-sm m-0 float-right">
                        </ul>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>

