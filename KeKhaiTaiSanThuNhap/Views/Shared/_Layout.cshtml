            <script>
                function ThongBao(obj) {
                    var ele = $(obj);
                    var macoquan = ele.data("model-macoquan");
                    var macanbo = ele.data("model-macanbo");
                    var loai = ele.data("model-loai");

                    if (loai == 0) {
                        $('.thong-bao').text("Gửi Thông Báo")
                    }
                    else if (loai == 1) {
                        $('.thong-bao').text("Gửi Email")
                    }
                    else {
                        $('.thong-bao').text("Gửi Thông Báo Cho Người Đứng Đầu Cơ Quan")
                    }

                    if (loai == 0 || loai == 1) {
                        $.get(`/Shared/GetCanBo/${macanbo}`, (data) => {
                            $('#name').val(`@@ ${data}`)
                        })
                    }
                    else {
                        $.get(`/Shared/GetCoQuan/${macoquan}`, (data) => {
                            $('#name').val(`@@ ${data}`)
                        })
                    }

                    $('#Loai_TB').val(loai)
                    $('#MaCanBo_TB').val(macanbo)
                    $('#MaCoQuan_TB').val(macoquan)


                    $('#TieuDe_TB').val('')
                    $('#NoiDung_TB').val('')

                };

                function FnBegin_ThongBao() {

                }

                function FnSuccess_ThongBao(data) {

                    $('.closeform').click();
                    Swal.fire({
                        icon: data.status,
                        title: data.title,
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false,
                    })
                }

                function Failure_ThongBao(data) {
                    Swal.fire({
